# Backend API Environment Variables - Phase 5
# Based on Phase 5 Spec and Contract Documents

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/todo_db

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Better Auth Configuration
BETTER_AUTH_SECRET=your-better-auth-secret
BETTER_AUTH_URL=http://localhost:3000

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key

# Dapr Configuration
DAPR_HTTP_PORT=3500
DAPR_GRPC_PORT=50001
DAPR_ENABLED=true
DAPR_APP_ID=backend-api
DAPR_APP_PORT=8000

# Kafka Configuration (via Dapr Pub/Sub)
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_TASK_EVENTS=task-events
KAFKA_TOPIC_REMINDERS=reminders
KAFKA_TOPIC_NOTIFICATIONS=notifications

# Email Service (Sendinblue/Brevo)
SENDINBLUE_API_KEY=your-sendinblue-api-key
SMTP_FROM_EMAIL=noreply@todo-app.example.com

# Firebase Cloud Messaging (for push notifications)
FCM_SERVER_KEY=your-fcm-server-key
FCM_PROJECT_ID=your-fcm-project-id

# Application Settings
APP_ENV=development
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# MCP Server Configuration
MCP_ENABLED=true
MCP_SERVER_NAME=todo-mcp-server

# Reminder Scheduler (Cron Binding)
REMINDER_CHECK_INTERVAL_MINUTES=5
